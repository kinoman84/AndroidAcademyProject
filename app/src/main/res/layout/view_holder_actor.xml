<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/castCardView1"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/actorImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/actor_img_robert_downey_jr" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/actorNameTextView"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Robert Downey Jr."
        android:textColor="#D8D8D8"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/castCardView1"
        app:layout_constraintStart_toStartOf="@+id/castCardView1"
        app:layout_constraintTop_toBottomOf="@id/castCardView1" />

</androidx.constraintlayout.widget.ConstraintLayout>


